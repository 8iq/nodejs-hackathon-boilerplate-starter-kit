{
  "name": "start-up-kit",
  "description": "Easy and Fast StartUp development kit",
  "private": true,
  "repository": "https://github.com/pahaz/hackathon-boilerplate-starter-kit",
  "homepage": "https://github.com/pahaz/hackathon-boilerplate-starter-kit",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node ./bin/run-multiple-apps",
    "start": "node ./bin/run-multiple-apps",
    "build": "node ./bin/run-build-all",
    "lint": "yarn run eslint ."
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-plugin-react": "^7.21.5",
    "babel-eslint": "^10.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "react/react-in-jsx-scope": "warn",
      "react/prop-types": "warn",
      "react/display-name": "warn",
      "no-prototype-builtins": "warn"
    }
  }
}
